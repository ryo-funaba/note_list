.devise-wrapper
  .devise-container
    h2
      | ログイン
    .border-line
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .label-wrapper
        = f.label :email
        br
        = f.email_field :email, autofocus: true, autocomplete: "email",:placeholder => 'メールアドレスを入力',class: "label-field"
      .label-wrapper
        = f.label :password
        br
        = f.password_field :password, autocomplete: "current-password",:placeholder => 'メールアドレスを入力',class: "label-field"
      - if devise_mapping.rememberable?
        .label-wrapper
          = f.check_box :remember_me
          = f.label :remember_me
      .label-wrapper
        = f.submit "ログイン" ,class: "submit-btn"
      .border-line
      .more_link_box
        .login-btn
          = link_to "新規登録", new_registration_path(resource_name)
          br
        .forgot-pass
          = link_to "パスワードを忘れた方", new_password_path(resource_name)
